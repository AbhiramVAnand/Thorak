<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkDim">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:text="Customize"
                android:textColor="@color/offwhite"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <ImageView
                    android:id="@+id/previewIcon"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />

                <TextView
                    android:id="@+id/previewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:hint="Hii"
                    android:shadowColor="@color/darkBl"
                    android:shadowDx="-2"
                    android:shadowDy="-2"
                    android:shadowRadius="1"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/changefont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="App Font:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fontName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bglayout"
                android:backgroundTint="@color/gray"
                android:baselineAligned="false"
                android:paddingLeft="20sp"
                android:paddingTop="5sp"
                android:paddingRight="20sp"
                android:paddingBottom="5sp"
                android:textColor="@color/offwhite" />

            <TextView
                android:id="@+id/fontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Font size:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/fsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:id="@+id/iconSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Icon size:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/isize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextClock
                    android:id="@+id/ctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/k2d"
                    android:lineHeight="5sp"
                    android:textColor="@color/white"
                    android:shadowColor = "@color/darkBl"
                    android:shadowDx = "2"
                    android:shadowDy = "2"
                    android:shadowRadius = "1"/>

                <TextClock
                    android:id="@+id/cdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/noto_sans"
                    android:shadowColor = "@color/darkBl"
                    android:shadowDx = "2"
                    android:shadowDy = "2"
                    android:shadowRadius = "1" />

            </LinearLayout>

            <TextView
                android:id="@+id/clcfnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Clock Font:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/clkfntName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bglayout"
                android:backgroundTint="@color/gray"
                android:baselineAligned="false"
                android:paddingLeft="20sp"
                android:paddingTop="5sp"
                android:paddingRight="20sp"
                android:paddingBottom="5sp"
                android:textColor="@color/offwhite" />

            <TextView
                android:id="@+id/CfontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Font size:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/Cfsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:id="@+id/dfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Icon size:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />
            <SeekBar
                android:id="@+id/dfsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp" />

            <TextView
                android:id="@+id/clkposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:shadowColor="@color/darkBl"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:text="Icon size:"
                android:textColor="@color/offwhite"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/rightarrow"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/arrowfilled"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>